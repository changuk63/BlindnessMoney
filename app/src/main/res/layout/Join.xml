<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leechanguk.blindnessmoney.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="72dp"/>

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "P/W"
        android:textSize="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check \n  p/w"
        android:textSize="35dp"
        android:layout_marginTop="170dp"/>

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "e-mail"
        android:textSize="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="260dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        android:hint="        Enter Id         "
        android:maxLength="15"
        android:id="@+id/inputID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:hint=" Enter Password "
        android:layout_marginLeft="120dp"
        android:inputType="textPassword"
        android:layout_alignParentEnd="false"
        android:id="@+id/inputPW"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint=" Check Password "
        android:layout_marginLeft="120dp"
        android:inputType="textPassword"
        android:layout_alignParentEnd="false"
        android:id="@+id/inputCheckPW"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:hint=" Enter Email "
        android:layout_marginLeft="120dp"
        android:inputType="textPassword"
        android:layout_alignParentEnd="false"
        android:id="@+id/inputEMail"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Join    "
        android:layout_marginTop="350dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/joinRequire"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID duplicate view"
        android:layout_alignBottom="@+id/inputID"
        android:layout_toEndOf="@+id/inputID"
        android:id="@+id/duplicateView"/>

</RelativeLayout>