<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leechanguk.blindnessmoney.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="72dp"
        android:id="@+id/inputID" />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "P/W"
        android:textSize="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:id="@+id/textView" />

    <CheckBox
        android:id="@+id/rememberId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remember p/w"
        android:button="@null"
        android:drawableLeft="@drawable/pwcheckbox"
        android:checked="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="auto login"
        android:checked="false"
        android:drawableLeft="@drawable/pwcheckbox"
       android:button="@null"
        android:layout_alignTop="@+id/rememberId"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginEnd="41dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:hint="              Enter Id              "
        android:maxLength="15"
        android:id="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:hint="  Enter Password  "
        android:layout_marginLeft="120dp"
        android:inputType="textPassword"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="120dp"
        android:text = "find ID/PW"
        android:id="@+id/button" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="join"
        android:id="@+id/join"
        android:layout_below="@+id/login"
        android:layout_alignStart="@+id/login" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/login"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/rememberId" />



</RelativeLayout>
